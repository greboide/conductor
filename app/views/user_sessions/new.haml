%h1 Login

- form_for @user_session, :url => session_path do |f|
  = f.error_messages
  - content_tag('div', :class => 'login_container', :style => @user_session.openid_identifier.blank? ? nil : 'display:none') do
    %p
      = f.label :login
      (or
      = link_to_function "login using OpenID", "$('.login_container').toggle();"
      )
      %br
      = f.text_field :login
    %p
      = f.label :password
      %br
      = f.password_field :password
  - content_tag('div', :class => 'login_container', :style => @user_session.openid_identifier.blank? ? 'display:none' : nil) do
    %p
      = f.label :openid_identifier, "OpenID"
      (or
      = link_to_function "login using a standard username / password", "$('.login_container').toggle();"
      )
      %br
      = f.text_field :openid_identifier
  %p
    = f.check_box :remember_me
    = f.label :remember_me
  = f.submit "Login"
