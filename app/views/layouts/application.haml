!!! XML
!!! Strict
%html{html_attrs('en')}
  %head
    %meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
    %title== #{controller.controller_name}: #{controller.action_name}
    = stylesheet_link_tag 'reset', 'site'
    = javascript_include_tag :defaults
  %body
    #page
      #header
        %h1= link_to APP_CONFIG[:site_name], '/', :title => 'Home'
      #container
        #nav
          %ul
            - if !current_user
              %li= link_to('Sign up', new_user_path)
              %li= link_to('Log in', new_session_path)
              %li= link_to('Forgot password', new_password_path)
            - else
              %li= link_to('My account', account_path)
              %li= link_to('Log out', session_path, {:method => :delete, :confirm => "Are you sure you want to log out?"})
        #content
          =flash_messages
          =yield
      #footer
        %p Copyright &copy; 2008 unwwwired.net, released under the MIT license